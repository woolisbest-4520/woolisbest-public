                    'https://www.y2mate.com',
                    'https://y2mate.is',
                    'https://en.y2mate.is'
                ],
                getUrl: (server, videoId) => `${server}/api/ajaxConvert`,
                parseResponse: (data) => {
                    if (!data.result) return [];
                    const streams = [];
                    const qualities = ['1080p', '720p', '480p', '360p'];
                    qualities.forEach(q => {
                        if (data.result[q]) {
                            streams.push({
                                url: data.result[q],
                                quality: q,
                                type: 'Y2Mate',
                                hasAudio: true
                            });
                        }
                    });
                    return streams;
                },
                customFetch: async (server, videoId) => {
                    const response = await fetch(`${server}/api/ajaxConvert`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded'
                        },
                        body: `videoid=${videoId}&quality=1080`,
                        signal: AbortSignal.timeout(12000)
                    });
                    return response;
                }
            },
            {
                name: 'YTStream',
                servers: [
                    'https://ytstream.download',
                    'https://api.ytstream.download'
                ],
                getUrl: (server, videoId) => `${server}/api/video/${videoId}`,
                parseResponse: (data) => {
                    if (!data.formats) return [];
                    return data.formats.map(f => ({
                        url: f.url,
                        quality: f.qualityLabel || f.quality,
                        type: 'YTStream',
                        hasAudio: f.hasAudio || true
                    }));
                }
            },
            {
                name: 'SaveFrom',
                servers: [
                    'https://worker.sf-converter.com',
                    'https://api.savefrom.net'
                ],
                getUrl: (server, videoId) => `${server}/download?url=https://youtube.com/watch?v=${videoId}`,
                parseResponse: (data) => {
                    if (!data.urls) return [];
                    return data.urls.map(u => ({
                        url: u.url,
                        quality: u.quality || u.name,
                        type: 'SaveFrom',
                        hasAudio: true
                    }));
                }
            },
            {
                name: 'VidPlay',
                servers: [
                    'https://vidplay.online',
                    'https://api.vidplay.site'
                ],
                getUrl: (server, videoId) => `${server}/api/source/${videoId}`,
                parseResponse: (data) => {
                    if (!data.sources) return [];
                    return data.sources.map(s => ({
                        url: s.file || s.url,
                        quality: s.label || 'auto',
                        type: 'VidPlay',
                        hasAudio: true
                    }));
                }
            }
        ];
        
        function toggleLoop() {
            isLoopEnabled = !isLoopEnabled;
            const btnLoop = document.getElementById('btnLoop');
            
            if (isLoopEnabled) {
                btnLoop.textContent = 'ğŸ” ãƒªãƒ”ãƒ¼ãƒˆ: ON';
                btnLoop.style.background = 'linear-gradient(135deg, #4CAF50 0%, #388E3C 100%)';
                addDebug('ğŸ” ãƒªãƒ”ãƒ¼ãƒˆå†ç”Ÿ: ON');
            } else {
                btnLoop.textContent = 'ğŸ” ãƒªãƒ”ãƒ¼ãƒˆ: OFF';
                btnLoop.style.background = 'linear-gradient(135deg, #7b1fa2 0%, #4a148c 100%)';
                addDebug('ğŸ” ãƒªãƒ”ãƒ¼ãƒˆå†ç”Ÿ: OFF');
            }
            
            applyLoopToCurrentPlayer();
            
            showInfo(`ãƒªãƒ”ãƒ¼ãƒˆå†ç”Ÿã‚’${isLoopEnabled ? 'ON' : 'OFF'}ã«ã—ã¾ã—ãŸ`);
        }

        function applyLoopToCurrentPlayer() {
            const player = document.getElementById('player');
            
            if (currentPlayMode === 'stream') {
                if (player && player.tagName === 'VIDEO') {
                    player.loop = isLoopEnabled;
                    addDebug(`ğŸ“º videoè¦ç´ ã®loopå±æ€§ã‚’${isLoopEnabled}ã«è¨­å®š`);
                }
            } else {
                if (player && player.tagName === 'IFRAME' && currentVideoId) {
                    const currentSrc = player.src;
                    let newSrc = currentSrc;
                    
                    newSrc = newSrc.replace(/[&?]loop=\d+/, '');
                    newSrc = newSrc.replace(/[&?]playlist=[^&]+/, '');
                    
                    if (isLoopEnabled) {
                        const separator = newSrc.includes('?') ? '&' : '?';
                        newSrc += `${separator}loop=1&playlist=${currentVideoId}`;
                    }
                    
                    player.src = newSrc;
                    addDebug(`ğŸ“º iframe URLã‚’æ›´æ–°: loop=${isLoopEnabled}`);
                }
            }
        }
        
        function toggleTheme() {
            const body = document.body;
            const themeToggle = document.getElementById('themeToggle');
            
            body.classList.toggle('light-mode');
            
            if (body.classList.contains('light-mode')) {
                themeToggle.textContent = 'â˜€ï¸';
            } else {
                themeToggle.textContent = 'ğŸŒ™';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const apiKeySelect = document.getElementById('apiKeySelect');
            const customKeyInput = document.getElementById('customKeyInput');
            
            if (apiKeySelect) {
                apiKeySelect.addEventListener('change', function() {
                    if (this.value === 'custom') {
                        customKeyInput.style.display = 'flex';
                    } else {
                        customKeyInput.style.display = 'none';
                    }
                });
            }
        });

        async function searchVideos() {
            const query = document.getElementById('searchQuery').value.trim();
            const apiKeySelect = document.getElementById('apiKeySelect');
            const customApiKey = document.getElementById('apiKey');
            
            let apiKey = '';
            if (apiKeySelect.value === 'custom') {
                apiKey = customApiKey.value.trim();
            } else {
                apiKey = apiKeySelect.value;
            }
            
            const loading = document.getElementById('loading');
            const error = document.getElementById('error');
            const info = document.getElementById('info');
            const results = document.getElementById('results');

            error.style.display = 'none';
            info.style.display = 'none';
            results.innerHTML = '';

            if (!query) {
                showError('æ¤œç´¢ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ã¾ãŸã¯URLã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
                return;
            }

            const videoIdMatch = query.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\s]+)/);
            if (videoIdMatch) {
                playVideo(videoIdMatch[1], 'YouTubeå‹•ç”»');
                return;
            }

            loading.style.display = 'block';
            showInfo('æ¤œç´¢ä¸­...');

            if (apiKey) {
                try {
                    const response = await fetch(
                        `https://www.googleapis.com/youtube/v3/search?part=snippet&maxResults=12&q=${encodeURIComponent(query)}&type=video&key=${apiKey}`,
                        { signal: AbortSignal.timeout(15000) }
                    );

                    if (response.ok) {
                        const data = await response.json();
                        
                        if (data.items && data.items.length > 0) {
                            displayGoogleResults(data.items);
                            loading.style.display = 'none';
                            showInfo(`âœ… YouTube Data API ã§æ¤œç´¢ã—ã¾ã—ãŸ`);
                            return;
                        }
                    }
                } catch (err) {
                    console.log('YouTube Data API error:', err);
                }
            }

            const invidiousServers = [
                'https://inv.perditum.com',
                'https://inv.nadeko.net',
                'https://invidious.nerdvpn.de',
                'https://yewtu.be'
            ];

            for (const server of invidiousServers) {
                try {
                    const invUrl = `${server}/api/v1/search?q=${encodeURIComponent(query)}&type=video`;
                    
                    const response = await fetch(invUrl, {
                        signal: AbortSignal.timeout(10000)
                    });

                    if (response.ok) {
                        const data = await response.json();
                        
                        if (data && Array.isArray(data) && data.length > 0) {
                            displayInvidiousResults(data);
                            loading.style.display = 'none';
                            showInfo(`âœ… Invidious ã§æ¤œç´¢ã—ã¾ã—ãŸ`);
                            return;
                        }
                    }
                } catch (err) {
                    console.log(`Invidious error:`, err.message);
                    continue;
                }
            }

            displayPopularVideos(query);
            loading.style.display = 'none';
            showInfo('âš ï¸ æ¤œç´¢APIãŒåˆ©ç”¨ã§ããªã„ãŸã‚ã€äººæ°—å‹•ç”»ã‚’è¡¨ç¤ºã—ã¦ã„ã¾ã™');
        }

        function displayPopularVideos(query) {
            const results = document.getElementById('results');
            
            const popularVideos = [
                { id: 'dQw4w9WgXcQ', title: 'Rick Astley - Never Gonna Give You Up', channel: 'Rick Astley' },
                { id: 'kJQP7kiw5Fk', title: 'Luis Fonsi - Despacito ft. Daddy Yankee', channel: 'Luis Fonsi' },
                { id: 'JGwWNGJdvx8', title: 'Ed Sheeran - Shape of You', channel: 'Ed Sheeran' },
                { id: 'OPf0YbXqDm0', title: 'Mark Ronson - Uptown Funk ft. Bruno Mars', channel: 'Mark Ronson' }
            ];

            popularVideos.forEach(video => {
                const card = document.createElement('div');
                card.className = 'video-card';
                card.onclick = () => playVideo(video.id, video.title);

                const thumbnail = `https://img.youtube.com/vi/${video.id}/mqdefault.jpg`;

                card.innerHTML = `
                    <img src="${thumbnail}" alt="${video.title}">
                    <div class="video-info">
                        <div class="video-title">${video.title}</div>
                        <div class="video-channel">${video.channel}</div>
                    </div>
                `;

                results.appendChild(card);
            });
        }

        function displayInvidiousResults(items) {
            const results = document.getElementById('results');
            
            items.slice(0, 12).forEach(item => {
                if (!item.videoId) return;
                
                const videoId = item.videoId;
                const card = document.createElement('div');
                card.className = 'video-card';
                card.onclick = () => playVideo(videoId, item.title);

                let thumbnail = `https://img.youtube.com/vi/${videoId}/mqdefault.jpg`;

                card.innerHTML = `
                    <img src="${thumbnail}" alt="${item.title || 'Video'}">
                    <div class="video-info">
                        <div class="video-title">${item.title || 'Untitled Video'}</div>
                        <div class="video-channel">${item.author || 'Unknown Channel'}</div>
                    </div>
                `;

                results.appendChild(card);
            });
        }

        function displayGoogleResults(items) {
            const results = document.getElementById('results');
            
            items.forEach(item => {
                const videoId = item.id.videoId;
                const card = document.createElement('div');
                card.className = 'video-card';
                card.onclick = () => playVideo(videoId, item.snippet.title);

                const thumbnail = item.snippet.thumbnails.medium.url;

                card.innerHTML = `
                    <img src="${thumbnail}" alt="${item.snippet.title}">
                    <div class="video-info">
                        <div class="video-title">${item.snippet.title}</div>
                        <div class="video-channel">${item.snippet.channelTitle}</div>
                    </div>
                `;

                results.appendChild(card);
            });
        }

        function playVideo(videoId, title) {
            const playerSection = document.getElementById('playerSection');
            const currentVideo = document.getElementById('currentVideo');
            const btnStream = document.getElementById('btnStream');

            currentVideoId = videoId;
            availableStreams = [];
            debugMessages = [];
            currentQuality = null;
            
            addDebug(`ğŸ¬ å‹•ç”»ID: ${videoId}`);
            addDebug(`ğŸ“ ã‚¿ã‚¤ãƒˆãƒ«: ${title}`);
            
            playerSection.style.display = 'block';
            currentVideo.textContent = title;

            const playerContainer = document.getElementById('playerContainer');
            playerContainer.innerHTML = `<iframe id="player" width="100%" height="100%" src="https://www.youtube.com/embed/${videoId}?autoplay=1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
            
            const streamUrl = document.getElementById('streamUrl');
            streamUrl.textContent = `åŸ‹ã‚è¾¼ã¿å†ç”Ÿä¸­ | https://www.youtube.com/watch?v=${videoId}`;
            
            addDebug('âœ… åŸ‹ã‚è¾¼ã¿ãƒ—ãƒ¬ãƒ¼ãƒ¤ãƒ¼ä½œæˆå®Œäº†');

            btnStream.disabled = true;
            btnStream.textContent = 'ğŸ¬ å–å¾—ä¸­...';
            
            addDebug('ğŸ” ã‚¹ãƒˆãƒªãƒ¼ãƒ æƒ…å ±ã®å–å¾—ã‚’é–‹å§‹...');
            
            fetchStreamUrls(videoId).then(streams => {
                if (streams.length > 0) {
                    availableStreams = streams;
                    btnStream.disabled = false;
                    btnStream.textContent = 'ğŸ¬ ã‚¹ãƒˆãƒªãƒ¼ãƒ å†ç”Ÿ';
                    addDebug(`âœ… ${streams.length}å€‹ã®ã‚¹ãƒˆãƒªãƒ¼ãƒ ã‚’å–å¾—æˆåŠŸï¼`);
                    showInfo(`ã‚¹ãƒˆãƒªãƒ¼ãƒ å†ç”ŸãŒåˆ©ç”¨å¯èƒ½ã§ã™`);
                    
                    setPlayMode('stream');
                } else {
                    btnStream.disabled = true;
                    btnStream.textContent = 'ğŸ¬ åˆ©ç”¨ä¸å¯';
                    addDebug('âŒ ã‚¹ãƒˆãƒªãƒ¼ãƒ å–å¾—å¤±æ•—');
                }
            }).catch(err => {
                addDebug(`âŒ ã‚¨ãƒ©ãƒ¼: ${err.message}`);
                btnStream.disabled = true;
                btnStream.textContent = 'ğŸ¬ ã‚¨ãƒ©ãƒ¼';
            });

            playerSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        async function fetchStreamUrls(videoId) {
            let attemptCount = 0;
            const maxAttempts = streamAPIs.reduce((sum, api) => sum + api.servers.length, 0);
            
            addDebug(`ğŸŒ ${maxAttempts}å€‹ã®ã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆã‚’è©¦è¡Œï¼ˆãƒ—ãƒ­ã‚­ã‚·ãªã—ç›´æ¥æ¥ç¶šï¼‰`);
            
            for (const api of streamAPIs) {
                addDebug(`\nğŸ“¡ ${api.name} API (${api.servers.length}ã‚µãƒ¼ãƒãƒ¼)`);
                
                for (const server of api.servers) {
                    attemptCount++;
                    try {
                        addDebug(`  [${attemptCount}/${maxAttempts}] ${server.replace('https://', '')}`);
                        
                        let response;
                        
                        if (api.customFetch) {
                            response = await api.customFetch(server, videoId);
                        } else {
                            const apiUrl = api.getUrl(server, videoId);
                            response = await fetch(apiUrl, {
                                signal: AbortSignal.timeout(10000),
                                headers: {
                                    'Accept': 'application/json'
                                }
                            });
                        }
                        
                        addDebug(`    â†’ HTTP ${response.status}`);
                        
                        if (!response.ok) continue;
                        
                        const data = await response.json();
                        const streams = api.parseResponse(data);
                        
                        if (streams.length > 0) {
                            addDebug(`    âœ… ${streams.length}å€‹ã®ã‚¹ãƒˆãƒªãƒ¼ãƒ å–å¾—ï¼`);
                            return streams;
                        }
                    } catch (err) {
                        addDebug(`    âŒ ${err.message}`);
                        continue;
                    }
                }
            }
            
            addDebug('\nâŒ ã™ã¹ã¦ã®APIã§å¤±æ•—ã—ã¾ã—ãŸ');
            return [];
        }

        function setPlayMode(mode) {
            if (!currentVideoId) return;

            currentPlayMode = mode;
            const playerContainer = document.getElementById('playerContainer');
            const streamUrl = document.getElementById('streamUrl');
            const qualityControls = document.getElementById('qualityControls');

            streamUrl.textContent = '';
            qualityControls.style.display = 'none';

            addDebug(`\nğŸ® å†ç”Ÿãƒ¢ãƒ¼ãƒ‰åˆ‡ã‚Šæ›¿ãˆ: ${mode}`);

            if (mode === 'stream') {
                if (availableStreams.length === 0) {
                    showError('ã‚¹ãƒˆãƒªãƒ¼ãƒ æƒ…å ±ãŒå–å¾—ã§ãã¦ã„ã¾ã›ã‚“');
                    return;
                }
                
                playerContainer.innerHTML = '<video id="player" controls autoplay style="width:100%;height:100%;"></video>';
                qualityControls.style.display = 'grid';
                
                createQualityButtons();
                playBestQuality();
                
                setTimeout(() => applyLoopToCurrentPlayer(), 100);
                return;
            }

            let embedUrl = '';

            if (mode === 'embed') {
                embedUrl = `https://www.youtube.com/embed/${currentVideoId}?autoplay=1`;
                if (isLoopEnabled) {
                    embedUrl += `&loop=1&playlist=${currentVideoId}`;
                }
                streamUrl.textContent = `åŸ‹ã‚è¾¼ã¿å†ç”Ÿ`;
            } else if (mode === 'nocookie') {
                embedUrl = `https://www.youtube-nocookie.com/embed/${currentVideoId}?autoplay=1`;
                if (isLoopEnabled) {
                    embedUrl += `&loop=1&playlist=${currentVideoId}`;
                }
                streamUrl.textContent = `No CookieåŸ‹ã‚è¾¼ã¿`;
            } else if (mode === 'education') {
                loadEducationParams().then(params => {
                    const eduParamsArray = [];
                    
                    for (const [key, value] of Object.entries(params)) {
                        eduParamsArray.push(`${key}=${value}`);
                    }
                    
                    if (isLoopEnabled) {
                        eduParamsArray.push('loop=1');
                        eduParamsArray.push(`playlist=${currentVideoId}`);
                    }
                    
                    const educationUrl = `https://www.youtubeeducation.com/embed/${currentVideoId}?${eduParamsArray.join('&')}`;
                    
                    playerContainer.innerHTML = `<iframe id="player" width="100%" height="100%" src="${educationUrl}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
                    streamUrl.textContent = `EducationåŸ‹ã‚è¾¼ã¿`;
                });
                return;
            }

            playerContainer.innerHTML = `<iframe id="player" width="100%" height="100%" src="${embedUrl}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
        }

        function createQualityButtons() {
            const qualityControls = document.getElementById('qualityControls');
            qualityControls.innerHTML = '';
            
            const audioStreams = availableStreams.filter(s => s.hasAudio);
            const sortableStreams = audioStreams.length > 0 ? audioStreams : availableStreams;
            
            const getQualityValue = (q) => {
                const str = String(q).toLowerCase();
                const match = str.match(/(\d+)/);
                if (match) return parseInt(match[1]);
                if (str.includes('max') || str.includes('best')) return 9999;
                if (str.includes('high')) return 1080;
                if (str.includes('medium')) return 720;
                if (str.includes('low')) return 360;
                return 0;
            };
            
            const sortedStreams = [...sortableStreams].sort((a, b) => {
                return getQualityValue(b.quality) - getQualityValue(a.quality);
            });
            
            addDebug(`ğŸšï¸ ${sortedStreams.length}å€‹ã®ç”»è³ªã‚ªãƒ—ã‚·ãƒ§ãƒ³`);
            
            sortedStreams.forEach((stream, index) => {
                const button = document.createElement('button');
                const apiShort = stream.type.substring(0, 4);
                button.textContent = `${stream.quality} ${stream.hasAudio ? 'ğŸ”Š' : 'ğŸ”‡'} [${apiShort}]`;
                button.onclick = () => changeQualityByIndex(index);
                button.title = `${stream.quality} - ${stream.type}`;
                qualityControls.appendChild(button);
            });
        }

        function playBestQuality() {
            changeQualityByIndex(0);
        }

        function changeQualityByIndex(index) {
            const audioStreams = availableStreams.filter(s => s.hasAudio);
            const sortableStreams = audioStreams.length > 0 ? audioStreams : availableStreams;
            
            const getQualityValue = (q) => {
                const str = String(q).toLowerCase();
                const match = str.match(/(\d+)/);
                if (match) return parseInt(match[1]);
                if (str.includes('max')) return 9999;
                if (str.includes('high')) return 1080;
                if (str.includes('medium')) return 720;
                return 0;
            };
            
            const sortedStreams = [...sortableStreams].sort((a, b) => {
                return getQualityValue(b.quality) - getQualityValue(a.quality);
            });
            
            if (index >= sortedStreams.length) return;
            
            const selectedStream = sortedStreams[index];
            currentQuality = selectedStream.quality;
            
            const qualityControls = document.getElementById('qualityControls');
            const buttons = qualityControls.querySelectorAll('button');
            buttons.forEach((btn, i) => {
                if (i === index) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            playStream(selectedStream);
        }

        function playStream(stream) {
            const player = document.getElementById('player');
            const streamUrl = document.getElementById('streamUrl');
            
            if (!stream || !stream.url) {
                showError('ã‚¹ãƒˆãƒªãƒ¼ãƒ ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸ');
                return;
            }
            
            addDebug(`âœ… é¸æŠ: ${stream.quality}`);
            
            player.src = stream.url;
            player.play().then(() => {
                addDebug('â–¶ï¸ å†ç”Ÿé–‹å§‹');
            }).catch(e => {
                addDebug(`âŒ å†ç”Ÿã‚¨ãƒ©ãƒ¼: ${e.message}`);
                showError('ã‚¹ãƒˆãƒªãƒ¼ãƒ ã®å†ç”Ÿã«å¤±æ•—ã—ã¾ã—ãŸ');
            });
            
            streamUrl.textContent = `ç”»è³ª: ${stream.quality} | API: ${stream.type} ${stream.hasAudio ? 'ğŸ”Š' : 'ğŸ”‡'}`;
        }

        async function downloadVideo(type) {
            if (!currentVideoId) {
                showError('å‹•ç”»ãŒé¸æŠã•ã‚Œã¦ã„ã¾ã›ã‚“');
                return;
            }

            addDebug(`\nğŸ“¥ ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰é–‹å§‹: ${type}`);
            
            const btnDownloadVideo = document.getElementById('btnDownloadVideo');
            const btnDownloadAudio = document.getElementById('btnDownloadAudio');
            
            btnDownloadVideo.disabled = true;
            btnDownloadAudio.disabled = true;
            btnDownloadVideo.textContent = 'â³ å‡¦ç†ä¸­...';
            btnDownloadAudio.textContent = 'â³ å‡¦ç†ä¸­...';

            try {
                let downloadUrl = null;
                
                if (availableStreams.length > 0) {
                    const stream = availableStreams.find(s => s.hasAudio) || availableStreams[0];
                    if (stream) {
                        downloadUrl = stream.url;
                    }
                }
                
                if (!downloadUrl) {
                    const streams = await fetchStreamUrls(currentVideoId);
                    if (streams.length > 0) {
                        const stream = streams.find(s => s.hasAudio) || streams[0];
                        downloadUrl = stream.url;
                    }
                }

                if (downloadUrl) {
                    const a = document.createElement('a');
                    a.href = downloadUrl;
                    a.download = `${currentVideoId}.${type === 'audio' ? 'mp3' : 'mp4'}`;
                    a.target = '_blank';
                    
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    
                    showInfo(`ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ã‚’é–‹å§‹ã—ã¾ã—ãŸ`);
                } else {
                    throw new Error('ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰URLã®å–å¾—ã«å¤±æ•—');
                }
            } catch (err) {
                showError('ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ');
            } finally {
                btnDownloadVideo.disabled = false;
                btnDownloadAudio.disabled = false;
                btnDownloadVideo.textContent = 'ğŸ“¥ å‹•ç”»DL';
                btnDownloadAudio.textContent = 'ğŸµ éŸ³å£°DL';
            }
        }

        function showError(message) {
            const error = document.getElementById('error');
            error.textContent = message;
            error.style.display = 'block';
            setTimeout(() => {
                error.style.display = 'none';
            }, 5000);
        }

        function showInfo(message) {
            const info = document.getElementById('info');
            info.textContent = message;
            info.style.display = 'block';
            setTimeout(() => {
                info.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html>
